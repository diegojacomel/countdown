body
  margin: 0
  font-family: Verdana, Arial, sans-serif

.text-center
  text-align: center

.countdown
  font-size: 25px

.ui-control
  margin: 30px 0

.ui-label
  font-weight: bold
  margin-right: 5px

.ui-input
  font-size: 16px
  border-radius: 5px
  box-shadow: none
  border: 1px solid #cccccc
  padding: 10px 15px
  outline: none

.ui-button
  font-size: 16px
  border-radius: 5px
  box-shadow: none
  border:none
  padding: 10px 15px
  background: #0275d8
  color: #ffffff
  outline: none
